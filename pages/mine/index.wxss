.mine-top{
  width: 100%;
  height: 80rpx;
  background: #F0EDF1;
  position: relative
}
button[plain].mine-imgBtn{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,50%);
  border-radius: 50%;
  box-shadow: 0rpx 2rpx 3rpx 3rpx #999;
  border: none;
  padding: 0
}
.mine-img{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,50%);
  border-radius: 50%;
  box-shadow: 0rpx 2rpx 3rpx 3rpx #999;
  border: none;
  padding: 0
}
.mine-imgBtn image{
  width: 100%;
  height: 100%;
  display: block
}
.mine-box{
  width: 100%;
  padding-top: 60rpx;
  box-shadow: 0rpx -5rpx 3rpx 3rpx #171718
}
.mine-name{
  width: 100%;
  font-size: 28rpx;
  color: #171718;
  text-align: center;
  line-height:2.55555556;
}
button[plain].mine-nameBtn{
  border: none;
  width: 50%   
}

.items{
  padding: 20rpx 0 60rpx
}
.item{
  width: 33.3%;
  text-align: center;
  font-size: 24rpx;
  color: #A09EA1;
}
.item-tips{
  color: #4B6AA5;
  font-size: 28rpx
}