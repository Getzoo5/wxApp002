.slide-image{
  width:94%;
  height:280rpx;
  margin:10rpx 3% 0rpx;
  border-radius:10rpx;
}
.descover-tab{
  font-size: 28rpx;
}

.wrap.lll {
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
}
.wrap.lll .item {
  font-size: 24rpx;
  text-align: left;
}
.side {
  width: 200rpx;
  flex-grow: 0;
}
.main {
  flex-grow: 1;
  box-sizing: border-box;
  padding: 0 16rpx 0 30rpx
}

.wrap.book {
  display: block;
  padding: 1%;
}
.wrap.book .item {
  width: 31.33333%;
  margin: 1%;
  flex-grow: 0;
  padding-bottom: 10rpx;
  background: #fff;
  border: dashed #bfbfbf 2rpx;
  border-radius: 8rpx;
  box-sizing: border-box
}

.movie-title{
  width: 100%;
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  text-align: center;
  display:block;  
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  overflow:hidden;
  padding-top: 8rpx
}

.movie-img{
  width: 100%;
  display: block;
  height: 150px
}
.wrap.movie {
  display: block;
  padding: 1%;
}
.wrap.movie .item {
  width: 31.33333%;
  margin: 1%;
  flex-grow: 0;
  padding-bottom: 10rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 2rpx #dfdfdf;
}

.movie-name{
  font-size: 28rpx;
  line-height: 180%;
  color: #333;
  font-weight: 600;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  overflow:hidden;
  margin-left: -8rpx;
  margin-bottom: 16rpx;
  padding-top: 16rpx
}
.movie-genresIn{
  display: inline-block;
  padding: 2rpx 6rpx;
  color: #666;
  background: #CDCDCD;
  font-size: 20rpx;
  margin-right: 10rpx;
  border-radius: 8rpx
}

.movie-inner{
  font-size: 24rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  overflow:hidden;
  padding-bottom: 10rpx
}
/* 提示窗 */
.Prompt{
  padding: 10rpx 60rpx 10rpx 100rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #bfbfbf;
  overflow: hidden;
  position: relative
}
.example {
  display: block;
  width: 100%;
  font-size: 24rpx;
  height: 38.4rpx;
  overflow: hidden;
  line-height: 38.4rpx;
  color: #484848
}

.marquee_box {
  width: 100%;
  position: relative;
  height: 38.4rpx;
  overflow: hidden;
  line-height: 38.4rpx;
}
.marquee_box:after {
    content:'';
    clear:both;
    overflow:hidden;
    height:0px;
    zoom:1;
}
.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}

.tishi{
  position:absolute;left:20rpx;
  line-height: 38.4rpx;
  height: 38.4rpx;
}
.icon{
  position:absolute;right:20rpx;
  line-height: 38.4rpx;
  height: 38.4rpx;
}